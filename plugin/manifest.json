{
  "manifest_version": 2,
  "name": "plugin",
  "description": "This extension helps ideamache",
  "version": "1.0",
  "permissions": [
	  	"http://*/*",
	  	"https://*/*",
	  	"activeTab",
	  	"tabs"
  	],
  "content_scripts": [
  	{
	    "matches": [
	    	"http://*/*",
	    	"https://*/*"
	    ],
	    "js": [
	    	"code/SlideOut.js",
	    	"code/main.js"
	    ],
	    "css": [
	    	"code/style.css"
	    ]
  	}],
  "background": {
    "scripts": [
    	"code/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "button.png"
  }
}