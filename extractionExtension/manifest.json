{
  "manifest_version": 2,
  "name": "plugin",
  "description": "This extension extracts metadata while you browse",
  "version": "1.0",
  "permissions": [
	  	"http://*/*",
	  	"https://*/*",
	  	"activeTab",
	  	"tabs"
  	],
  "content_scripts": [
  	{
	    "matches": [
	    	"http://*/*",
	    	"https://*/*"
	    ],
	    "js": [
	    	"code/SlideOut.js",
            "code/getMMD.js",
	    	"code/main.js",
            "code/mice/debi.js",
	    	"code/mice/mice.js",
	    	"code/mice/metadataRenderer.js",
	    	"code/fieldParsers.js",
	    	"code/mice/simplDeserializer.js",
	    	"code/extractMetadata.js",
	    	"code/dragEvents.js",
	    	"code/clipboard.js"
	    ],
	    "css": [
	    	"code/style.css",
	    	"code/mice/metadataRenderer.css"
	    ]
  	}],
  "background": {
    "scripts": [
    	"code/background.js",
    	"code/clipboardBackground.js"
    ]
  },
  "browser_action": {
    "default_icon": "button.png"
  }
}