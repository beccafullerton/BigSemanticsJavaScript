{
  "manifest_version": 2,

  "name": "TweetBubble",
  "description": "Expand to explore @usernames, #hashtags on Twitter. See related content without switching back and forth between tabs and windows",
  "version": "0.9.60",

  "icons": {
    "16": "content_script/img/logo_16.png",
    "128": "content_script/img/logo_128.png"
  },
  "permissions": [
    "https://twitter.com/search?q=%23*",
    "https://twitter.com/*",
    "http://ecology-service.cs.tamu.edu/",
    "http://ideamache.ecologylab.net/",
    "http://*/",
    "<all_urls>",
    "cookies",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
      	"https://twitter.com/search?q=%23*",
    	"https://twitter.com/*"
      ],
      "run_at": "document_end",
      "css": ["content_script/css/mice.css",
      		  "content_script/css/infosheet.css",
      		  "content_script/css/twitterMice.css"
      ],
      "js": [
        "content_script/js/bsjsCore/simpl/simplDeserializer.js",
        "content_script/js/util.js",
     	"content_script/js/logger.js",
        "content_script/js/renderers/interfaceStyle.js",
        "content_script/js/bsjsCore/BSUtilities.js",
        "content_script/js/bsjsCore/MetadataLoader.js",
        "content_script/js/bsjsCore/MetadataTask.js",
        "content_script/js/bsjsCore/extensionInterface.js",
        
        "content_script/js/bsjsCore/RepoMan.js",
        "content_script/js/bsjsCore/MetadataViewModel.js",
        "content_script/js/renderers/RendererBase.js",
        "content_script/js/renderers/VanillaMICE.js",
        
        "content_script/js/renderers/RenderingTask.js",
        "content_script/js/renderers/TweetBubbleRenderer.js",
        "content_script/js/renderers/TweetBubbleRenderingTask.js",
        "content_script/js/libraries/jquery-2.0.0.min.js",
        
        "content_script/js/twitterICE.js",
      	"content_script/js/ICE.js"
      ]
    }
  ],
  "background": {
    "page": "background/background.html"
  },
  "web_accessible_resources": [
    "content_script/img/expand_icon.png",
    "content_script/img/collapse_icon.png",
    "content_script/img/reply_153.png",
    "content_script/img/retweet_153.png",
    "content_script/img/favorite_153.png",
    "content_script/img/reply_221.png",
    "content_script/img/retweet_221.png",
    "content_script/img/favorite_221.png"
  ]
}
